<% @posts.each do | post | %> 
<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <strong>Andrew Lloyd</strong><br />
        <small>@ARLdev</small><br />
        <p><%= post.post %> </p>
      </div>
      <nav class="level">
        <div class="level-left is-mobile">
          <%= link_to post, class: "level-item" do %> 
          <span class="icon">
            <i class="fa fa-link" aria-hidden="true"></i>
          </span>
          <% end %> 
          <%= link_to edit_post_path(post), class: "level-item" do %> 
          <span class="icon">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </span>
          <% end %> 
          <%= link_to post, method: :delete, data: {confirm: "Are You Sure You Want to Delete This Post?"} do %> 
          <span class="icon">
            <i class="fa fa-trash" aria-hidden="true"></i>
          </span>
          <% end %> 
        </div>
      </nav>
    </div>
  </article>
</div>
<% end %> 